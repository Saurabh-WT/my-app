pipeline {
    agent any
    stages {
        stage("Clone") {
            steps {
                git branch: "main", url: "https://github.com/Pundir26/my-app.git"
            }
        }
        stage("Build") {
            steps {
                sh "mvn package"
            }
        }
        stage("Deploy") {
            steps {
                sh "cp target/app.war /home/walkingtree/Downloads/apache-tomcat-9.0.85/webapps"
            }
        }
    }
}
