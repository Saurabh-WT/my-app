pipeline {
    agent demo
{
}
    stages {
        stage("Clone") {
            steps {
                git branch: "main", url: "https://github.com/Pundir26/my-app.git"
            }
        }
        stage("Build") {
            steps {
                sh "mvn package"
            }
        }
        stage("Deploy") {
            steps {
                sh "scp target/app.war Saurabh@172.17.0.2:/home/Saurabh/apache-tomcat-9.0.85/webapps"
            }
        }
    }
}
