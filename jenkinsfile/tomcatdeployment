pipeline {
    agent any
    
    stages {
        stage('Clone') {
            steps {
                 git branch: "main", url: "https://github.com/Saurabh-WT/my-app.git"
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Deploy to Apache Tomcat') {
            steps {
                script {
                 sh "cp target/app.war /home/walkingtree/Downloads/apache-tomcat-9.0.90/webapps"
                }
            }
        }
    }
}
