pipeline {
    agent any

    parameters {
        string(name: 'main', defaultValue: 'main', description: 'Branch to build')
    }

    stages {
        stage('Clone') {
            steps {
                script {
                    checkout([$class: 'GitSCM',                           // Specifies that we're using the GitSCM class for configuring Git
          branches: [[name: "${params.BRANCH}"]],      // Specifies the branch to checkout based on the parameter BRANCH
          doGenerateSubmoduleConfigurations: false,   // Specifies whether to generate submodule configurations (false in this case)
          extensions: [],                             // Specifies any additional GitSCM extensions (none in this case)
          submoduleCfg: [],                           // Specifies submodule configurations (none in this case)
          userRemoteConfigs: [url: 'https://github.com/Saurabh-WT/my-app.git']])  // Specifies the remote Git repository URL

                }
            }
        }

        stage('Build') {
            steps {
            
                sh 'mvn clean package'
            }
        }

        stage('Deploy') {
            steps {
                sh 'cp target/app.war /home/walkingtree/Downloads/apache-tomcat-9.0.85/webapps'
                sh '/home/walkingtree/Downloads/apache-tomcat-9.0.85/bin/shutdown.sh'
                sh '/home/walkingtree/Downloads/apache-tomcat-9.0.85/bin/startup.sh'
            }
        }
    }
}
