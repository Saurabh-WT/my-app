pipeline {
    agent any

    parameters {
        string(name: 'BRANCH', defaultValue: 'master', description: 'Branch to build')
    }

    stages {
        stage('Clone') {
            steps {
                script {
                    checkout([$class: 'GitSCM', branches: [[name: "${params.BRANCH}"]], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/yourusername/yourrepository.git']]])
                }
            }
        }

        stage('Build') {
            steps {
                // Assuming you're using Maven for a Java project
                sh 'mvn clean package'
            }
        }

        stage('Deploy') {
            steps {
                sh 'cp target/your-project-name.war /path/to/apache-tomcat/webapps/'
                // Restart Tomcat to apply changes
                sh '/path/to/apache-tomcat/bin/shutdown.sh'
                sh '/path/to/apache-tomcat/bin/startup.sh'
            }
        }
    }
}
