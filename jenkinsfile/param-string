pipeline {
    agent any

    parameters {
        choice(name: 'BRANCH', choices: ['main', 'dev', 'prod'], description: 'Branch to build')
    }

    stages {
        stage('Clone') {
            steps {
    git branch: "main", url: "https://github.com/Saurabh-WT/my-app.git"
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
    }
}
